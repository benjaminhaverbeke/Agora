<!DOCTYPE html>
<html lang="en">
<head>
{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta charset="UTF-8">
    {% endblock %}
    <title>{% block title %}Accueil{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
              rel="stylesheet">
        {{ encore_entry_link_tags('app') }}

    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body data-turbo="true">
{#    {% autoescape %} #}
{% block nav %}


    <header class="header" data-controller="menu" data-action="turbolinks:before-cache@window->menu#animate">
        <a href="{{ path('home') }}"><img id="logo" src="{{ asset('build/images/logo.png') }}"
                                          alt="logo du site agora"/></a>
        <nav id="mySidenav" class="sidenav" data-menu-target="list">
            <span data-action="click->menu#animate" data-menu-target="close" class="material-symbols-outlined close">
close
</span>
            <ul {% if is_granted('ROLE_ADMIN') %}
                class="uladmin"
            {% elseif app.user %}
                class="uluser"
            {% else %}
                class="ulinvit"
                    {% endif %}>

                <li><a href="{{ path('home') }}">Accueil</a></li>
                <li><a href="{{ path('contact') }}">Contact</a></li>
                {% if app.user %}
                    <li class="user-li"><span class="material-symbols-outlined user-logo">
                    person</span>
                        {{ app.user.username }}</li>
                    <li><a href="{{ path('profile') }}">Mon Compte</a></li>
                    <li><a href="{{ path('salon.list') }}">Mes assemblées</a></li>
                    <li>
                        <a class="logout-icon" href="{{ path('logout') }}"><span class="material-symbols-outlined">
logout
</span> Déconnexion</a>
                    </li>
                    {% block invitation %}
                    {% endblock %}

                {% else %}
                    <li><a href="{{ path('register') }}">Inscription</a></li>
                    <li><a  class="login-icon" href="{{ path('login') }}"><span class="material-symbols-outlined">
login
</span>Connexion</a></li>

                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('bundle') }}">Administration</a></li>
                {% endif %}
            </ul>
        </nav>

        <div data-action="click->menu#animate" data-menu-target="burger"><span
                    class="material-symbols-outlined menu-burger">
menu
</span>
        </div>

    </header>

{% endblock %}

<div class="container">
    {% block body %}
        {% include 'partials/flash.html.twig' %}








    {% endblock %}
</div>


</body>
{#    {% endautoescape %} #}
</html>
