<!DOCTYPE html>
<html>
    <head>
        <meta name="turbo-refresh-method" content="morph">
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
{#    {% autoescape %}#}
{% block nav %}
    <nav>
        <ul>
            <li><a href="{{ path('home') }}">Accueil</a></li>

            {% if app.user %}
                <li><a href="{{ path('profile') }}">Mon Compte</a></li>
                <li><a href="{{ path('salon.list') }}">Mes assemblées</a></li>
                <li>
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('logout') }}">Déconnexion</a>
                </li>
                {% block invitation %}
                    {% endblock %}

            {% else %}
                <li><a href="{{ path('register') }}">Inscription</a></li>
                <li><a href="{{ path('login') }}">Connexion</a></li>

            {% endif %}
            <li><a href="{{ path('contact') }}">Contact</a></li>
            {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('admin') }}">Administration</a></li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}
    <div class="container">
        {% include 'partials/flash.html.twig' %}




        {% block body %}



        {% endblock %}




    </div>

    </body>
{#    {% endautoescape %}#}
</html>
