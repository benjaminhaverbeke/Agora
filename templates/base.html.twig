<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
{% block nav %}
    <nav>
        <ul>
            <li><a href="{{ path('home') }}">Accueil</a></li>

            {% if app.user %}
                <li><a href="{{ path('profile') }}">Mon Compte</a></li>
                <li><a href="{{ path('salon.list') }}">Mes salons</a></li>
                <li>
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('logout') }}">Déconnexion</a>
                </li>
                <li>{% block invitation %}
                    {% endblock %}
                </li>
            {% else %}
                <li><a href="{{ path('register') }}">Inscription</a></li>
                <li><a href="{{ path('login') }}">Connexion</a></li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}
    <div class="container">
        {% include 'partials/flash.html.twig' %}




        {% block body %}



        {% endblock %}



    </div>

    </body>
</html>
