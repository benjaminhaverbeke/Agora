{% extends 'base.html.twig' %}

{% block title %}Création de Salon{% endblock %}

{% block body %}
    <section>
        <h1>Créer une nouvelle assemblée</h1>

        {{ form_start(form, { 'attr': {'class': 'box salon-form', 'data-controller': 'date'} }) }}

        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        <div class="dates-box">

            {{ form_row(form.dateCampagne, { 'attr': {'class': 'date-create'}}) }}
            {{ form_row(form.dateVote, { 'attr': {'class': 'date-create'}}) }}
        </div>
        <div class="salon-errors">
            {{ form_errors(form) }}

        </div>


        {{ form_end(form) }}
    </section>

{% endblock %}
